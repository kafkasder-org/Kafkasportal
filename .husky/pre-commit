#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Run lint-staged for code quality checks
npx lint-staged

# Run typecheck to catch type errors before commit
echo "Running typecheck..."
npm run typecheck

if [ $? -ne 0 ]; then
  echo "❌ Typecheck failed. Please fix type errors before committing."
  exit 1
fi

echo "✅ Pre-commit checks passed!"

# Note: Tests are still disabled in pre-commit hook
# due to existing test failures. They run in CI/CD instead.
# Once test suite is stable, uncomment:
# npm run test:run
