    "e2e:ui": "playwright test --ui",
    "analyze": "ANALYZE=true next build",
    "clean": "rm -rf .next node_modules/.cache",
    "clean:all": "rm -rf .next node_modules package-lock.json && npm install",
    "clean:temp": "node -e \"const fs=require('fs');const path=require('path');const files=fs.readdirSync('.').filter(f=>/^(lint-|.*-output\\.txt|.*-current\\.txt|test-|typecheck-)/.test(f)&&f.endsWith('.txt'));files.forEach(f=>{try{fs.unlinkSync(f);}catch(e){}});\"",
    "health:check": "curl http://localhost:3000/api/health?detailed=true",
    "convex:dev": "convex dev",
    "convex:deploy": "convex deploy",
    "deploy:vercel": "vercel --prod",
    "validate:deploy": "node -e \"fetch(process.env.DEPLOY_URL + '/api/health').then(r => r.json()).then(console.log)\"",
    "vercel:prod": "vercel --prod",
    "vercel:preview": "vercel",
    "prepare": "[ -n \"$CI\" ] || husky || true",
    "lint:fix": "eslint --fix --max-warnings 0 .",
    "lint:check": "eslint --max-warnings 0 .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "sg": "tsx cli/sg.ts"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
